@model mvccore_dotnet_app.Models.UserRole

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2>Edit User</h2>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="id" />
            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input type="text" asp-for="UserName" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input type="email" asp-for="Email" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input type="text" asp-for="Phone" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Role" class="form-label"></label>
                <select asp-for="Role" class="form-control">
                    <option>Admin</option>
                    <option>Employee</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Rank" class="form-label"></label>
                <input type="text" asp-for="Rank" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="DateOfBirth" class="form-label"></label>
                <input type="date" asp-for="DateOfBirth" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Native" class="form-label"></label>
                <input type="text" asp-for="Native" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Pincode" class="form-label"></label>
                <input type="text" asp-for="Pincode" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</body>
</html>